#:kivy 1.0.9
#:import FadeTransition kivy.uix.screenmanager.FadeTransition


<LoginScreen>:
	name: "login"
	login_email: _login_email
	login_password: _login_password
	BoxLayout:
		orientation: "vertical"
		GridLayout:
			cols: 2
			padding: "20dp"
			spacing: "4dp"
			Label:
				height: "40dp"
				size_hint_y: None
				text: "Login Email"
			TextInput:
				id: _login_email
				height: "40dp"
				size_hint: 1.5, None
				focus: True
				multiline: False
			Label:
				height: "40dp"
				size_hint_y: None
				text: "Password"
			TextInput:
				id: _login_password
				height: "40dp"
				size_hint: 1.5, None
				password: True
		Button:
			id: _row_button
			text: "Login"
			height: "40dp"
			size_hint_y: None
			on_press: root.login()

<PostsScreen>:
	name: "posts"
	posts_list_container: _posts_list_container
	BoxLayout:
		orientation: "vertical"
		Label:
			text: "Posts"
			size_hint_y: .1
		BoxLayout:
			id: _posts_list_container
			orientation: "vertical"


<PhotoAppScreenManager>:
	id: _screen_manager
	login_screen: _login_screen
	posts_screen: _posts_screen

	transition: FadeTransition()

	LoginScreen:
		id: _login_screen
		manager: _screen_manager
	PostsScreen:
		id: _posts_screen
		manager: _screen_manager
