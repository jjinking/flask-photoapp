#:kivy 1.0.9
#:import FadeTransition kivy.uix.screenmanager.FadeTransition

<LoginScreen>:
	name: "login"
	login_email: _login_email
	login_password: _login_password
	BoxLayout:
		orientation: "vertical"
		GridLayout:
			cols: 2
			padding: "10dp"
			spacing: "4dp"
			Label:
				height: "40dp"
				size_hint_y: None
				text: "Login Email"
			TextInput:
				id: _login_email
				height: "40dp"
				size_hint: 1.6, None
				focus: True
				multiline: False
			Label:
				height: "40dp"
				size_hint_y: None
				text: "Password"
			TextInput:
				id: _login_password
				height: "40dp"
				size_hint: 1.5, None
				password: True
				multiline: False
		Button:
			id: _row_button
			text: "Login"
			height: "40dp"
			size_hint_y: None
			on_press: root.login()

<PostCarouselScreen>:
	name: "posts"
	carousel: _carousel
	Carousel:
		id: _carousel
		loop: True

<PostWidget>:
	post_image: _post_image
	post_text: _post_text

	orientation: "vertical"
	padding: "10dp"
	spacing: "8dp"
	AsyncImage:
		id: _post_image
		allow_stretch: True
		size_hint_y: 1.6
	Label:
		id: _post_text
		text_size: self.size
		padding: "20dp", "20dp"
		valign: "top"
		size_hint_y: .4
	
<PhotoAppScreenManager>:
	id: _screen_manager
	login_screen: _login_screen
	posts_screen: _posts_screen
	transition: FadeTransition()

	LoginScreen:
		id: _login_screen
		manager: _screen_manager
	PostCarouselScreen:
		id: _posts_screen
		manager: _screen_manager
